{% extends 'FitchFrontEndBundle::frontend.html.twig' %}

{% block main_header -%}
    <h2>{% trans %}competency_type.list.verb{% endtrans %}</h2>
    <em>{% trans %}competency_type.list.tagline{% endtrans %}</em>
{% endblock %}

{% block main_content -%}
    {% import 'FitchFrontEndBundle::helper.html.twig' as helper %}
    <div class="widget widget-table">
        {{ helper.widget_header('competency_type.list.verb', 'fa fa-th', 'widget-competency-type-index') }}
            <table class="records_list table table-condensed table-striped">
                <thead>
                <tr>
                    <th>{% trans %}competency_type.column.id{% endtrans %}</th>
                    <th>{% trans %}competency_type.column.name{% endtrans %}</th>
                    <th>{% trans %}competency_type.column.category{% endtrans %}</th>
                    <th>{% trans %}competency_type.column.actions{% endtrans %}</th>
                </tr>
                </thead>
                <tbody>
                {% for competencyType in competencyTypes %}
                    <tr>
                        <td>{{ competencyType.id }}</td>
                        <td><a href="{{ path('competency_type_show', { 'id': competencyType.id }) }}">{{ competencyType.name }}</a></td>
                        <td>{{ competencyType.getCategory }}</td>
                        <td>
                            <a href="{{ path('competency_type_show', { 'id': competencyType.id }) }}" class="btn btn-xs btn-default">{% trans %}navigation.show{% endtrans %}</a>
                            <a href="{{ path('competency_type_edit', { 'id': competencyType.id }) }}" class="btn btn-xs btn-default">{% trans %}navigation.edit{% endtrans %}</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {{ helper.widget_footer() }}
    </div>

    <div class="record_actions well">
        <a href="{{ path('competency_type_new') }}" class="btn btn-default btn-s">
            <i class="fa fa-plus-circle"></i> {% trans %}navigation.new{% endtrans %}
        </a>
    </div>
{% endblock %}
