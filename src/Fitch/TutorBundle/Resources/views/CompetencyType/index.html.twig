{% extends 'FitchFrontEndBundle::frontend.html.twig' %}

    {% block main_header -%}
    <h2>{% trans %}competencytype.list.verb{% endtrans %}</h2>
    <em>{% trans %}competencytype.list.tagline{% endtrans %}</em>
    {% endblock %}

{% block main_content -%}
    <div class="widget widget-table">
        <div class="widget-header">
            <h3><i class="fa fa-bullseye"></i> Competency Types</h3>
            <div class="btn-group widget-header-toolbar">
                <a href="#" title="Focus" class="btn-borderless btn-focus"><i class="fa fa-eye"></i></a>
                <a href="#" title="Expand/Collapse" class="btn-borderless btn-toggle-expand"><i class="fa fa-chevron-up"></i></a>
                <a href="#" title="Remove" class="btn-borderless btn-remove"><i class="fa fa-times"></i></a>
            </div>
        </div>
        <div class="widget-content">
            <table class="records_list table table-condensed table-striped">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Created</th>
                        <th>Updated</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for competencyType in competencyTypes %}
                    <tr>
                        <td>{{ competencyType.id }}</td>
                        <td><a href="{{ path('competency_type_show', { 'id': competencyType.id }) }}">{{ competencyType.name }}</a></td>
                        <td>{% if competencyType.created %}{{ competencyType.created|date('Y-m-d H:i:s') }}{% endif %}</td>
                        <td>{% if competencyType.updated %}{{ competencyType.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
                        <td>                        <a href="{{ path('competency_type_show', { 'id': competencyType.id }) }}" class="btn btn-xs btn-default">{% trans %}navigation.show{% endtrans %}</a>                        <a href="{{ path('competency_type_edit', { 'id': competencyType.id }) }}" class="btn btn-xs btn-default">{% trans %}navigation.edit{% endtrans %}</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
         </div>
    </div>
    <div class="record_actions well">
        <a href="{{ path('competency_type_new') }}" class="btn btn-default btn-s">
            <i class="fa fa-plus-circle"></i> {% trans %}navigation.new{% endtrans %}
        </a>
    </div>
{% endblock %}
