{% extends 'FitchFrontEndBundle::frontend.html.twig' %}

{% block main_header -%}
    <h2>{% trans %}status.show.verb{% endtrans %}</h2>
    <em>{% trans %}status.show.tagline{% endtrans %}</em>
{% endblock %}

{% block main_content -%}
    {% import 'FitchFrontEndBundle::helper.html.twig' as helper %}
    <div class="widget widget-table">
        {{ helper.widget_header(status, 'fa fa-tag', 'widget-status-show') }}
            <table class="record_properties table table-condensed table-striped">
                <tbody>
                <tr>
                    <th class="col-xs-2">{% trans %}status.column.id{% endtrans %}</th>
                    <td>{{ status.id }}</td>
                </tr>
                <tr>
                    <th class="col-xs-2">{% trans %}status.column.name{% endtrans %}</th>
                    <td>{{ status.name }}</td>
                </tr>
                </tbody>
            </table>
        {{ helper.widget_footer() }}
    </div>
    <div class="record_actions well">
        <a class="btn btn-default btn-s" href="{{ path('status') }}">
            <i class="fa fa-arrow-circle-left"></i> {% trans %}navigation.list{% endtrans %}
        </a>

        <a class="btn btn-default btn-s" href="{{ path('status_edit', { 'id': status.id }) }}">
            <i class="fa fa-pencil"></i> {% trans %}navigation.edit{% endtrans %}
        </a>

        {% form_theme delete_form 'FitchFrontEndBundle:Form:inline.html.twig' %}
        {{ form(delete_form, {'attr': {'class': 'form-inline'} }) }}
    </div>
{% endblock %}
