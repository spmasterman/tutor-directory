{% extends 'FitchFrontEndBundle::frontend.html.twig' %}

{% block main_header -%}
    <h2>{% trans %}status.list.verb{% endtrans %}</h2>
    <em>{% trans %}status.list.tagline{% endtrans %}</em>
{% endblock %}

{% block main_content -%}
    {% import 'FitchFrontEndBundle::helper.html.twig' as helper %}
    <div class="widget widget-table">
        {{ helper.widget_header('status.list.verb', 'fa fa-tag', 'widget-status-list') }}
            <table class="records_list table table-condensed table-striped">
                <thead>
                <tr>
                    <th>{% trans %}status.column.id{% endtrans %}</th>
                    <th>{% trans %}status.column.name{% endtrans %}</th>
                    <th>{% trans %}status.column.actions{% endtrans %}</th>
                </tr>
                </thead>
                <tbody>
                {% for status in statuses %}
                    <tr>
                        <td>{{ status.id }}{% if status.isDefault %}<i class="fa fa-asterisk yellow-font"></i>{% endif %}</td>
                        <td><a href="{{ path('status_show', { 'id': status.id }) }}">{{ status.name }}</a></td>
                        <td>
                            <a href="{{ path('status_show', { 'id': status.id }) }}" class="btn btn-xs btn-default">{% trans %}navigation.show{% endtrans %}</a>
                            <a href="{{ path('status_edit', { 'id': status.id }) }}" class="btn btn-xs btn-default">{% trans %}navigation.edit{% endtrans %}</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <small><i class="fa fa-asterisk yellow-font"></i>{% trans %}status.default_message{% endtrans %}</small>
        {{ helper.widget_footer() }}
    </div>

    <div class="record_actions well">
        <a href="{{ path('status_new') }}" class="btn btn-default btn-s">
            <i class="fa fa-plus-circle"></i> {% trans %}navigation.new{% endtrans %}
        </a>
    </div>
{% endblock %}
