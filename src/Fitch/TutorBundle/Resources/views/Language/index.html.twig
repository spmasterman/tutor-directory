{% extends 'FitchFrontEndBundle::frontend.html.twig' %}

{% block main_header -%}
    <h2>{% trans %}language.list.verb{% endtrans %}</h2>
    <em>{% trans %}language.list.tagline{% endtrans %}</em>
{% endblock %}

{% block main_content -%}
    <div class="widget widget-table">
        <div class="widget-header">
            <h3><i class="fa fa-language"></i> {% trans %}language.list.verb{% endtrans %}</h3>
            <div class="btn-group widget-header-toolbar">
                <a href="#" title="Focus" class="btn-borderless btn-focus"><i class="fa fa-eye"></i></a>
                <a href="#" title="Expand/Collapse" class="btn-borderless btn-toggle-expand"><i class="fa fa-chevron-up"></i></a>
                <a href="#" title="Remove" class="btn-borderless btn-remove"><i class="fa fa-times"></i></a>
            </div>
        </div>
        <div class="widget-content">
            <table class="records_list table table-condensed table-striped">
                <thead>
                    <tr>
                        <th>{% trans %}language.column.id{% endtrans %}</th>
                        <th>{% trans %}language.column.name{% endtrans %}</th>
                        <th>{% trans %}language.column.code{% endtrans %}</th>
                        <th>{% trans %}language.column.preferred{% endtrans %}</th>
                        <th>{% trans %}language.column.active{% endtrans %}</th>
                        <th>{% trans %}language.column.actions{% endtrans %}</th>
                     </tr>
                </thead>
                <tbody>
                {% for language in languages %}
                    <tr>
                        <td>{{ language.id }}</td>
                        <td><a href="{{ path('language_show', { 'id': language.id }) }}">{{ language.name }}</a></td>
                        <td>{{ language.threeLetterCode }}</td>
                        <td>{% if language.isPreferred %}<span class="badge badge-success">Yes</span>{% endif %}</td>
                        <td>{% if language.isActive %}<span class="badge badge-success">Yes</span>{% endif %}</td>
                        <td>
                            <a href="{{ path('language_show', { 'id': language.id }) }}" class="btn btn-xs btn-default">{% trans %}navigation.show{% endtrans %}</a>
                            <a href="{{ path('language_edit', { 'id': language.id }) }}" class="btn btn-xs btn-default">{% trans %}navigation.edit{% endtrans %}</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    <div class="record_actions well">
        <a href="{{ path('language_new') }}" class="btn btn-default btn-s">
            <i class="fa fa-plus-circle"></i> {% trans %}navigation.new{% endtrans %}
        </a>
    </div>
{% endblock %}
