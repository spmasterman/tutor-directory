{% if prototype is not defined %}{% set prototype=false %}{% endif %}
<p class="data-row" data-id="{% if prototype %}{{ tutorId }}{% else %}{{ tutor.getId }}{% endif %}">
    <span class="data-name">{% if prototype %}New Address{% else %}Address ({{ address.getType }}){% endif %}</span>
        <span class="data-value">
            {% if isEditor %}
            <a href="#" id="address{% if prototype %}0{% else %}{{ address.getId }}{% endif %}" class="inline-address"
                data-type="address"
                data-pk="{% if prototype %}{{ tutorId }}{% else %}{{ tutor.getId }}{% endif %}"
                data-address-pk="{% if prototype %}0{% else %}{{ address.getId }}{% endif %}"
                data-url="{{ path('tutor_ajax_update')}}"
                data-title="Enter Address"
                {% if not prototype %}
                    data-value-type="{{ address.getType }}"
                    data-value-street-primary="{{ address.getStreetPrimary }}"
                    data-value-street-secondary="{{ address.getStreetSecondary }}"
                    data-value-city="{{ address.getCity }}"
                    data-value-state="{{ address.getState }}"
                    data-value-zip="{{ address.getZip }}"
                    data-value-country="{{ address.getCountry.getId }}"
                {% endif %}
            >{% endif %}{% if not prototype %}{{ address }}{% endif %}{% if isEditor %}</a>{% endif %}
        </span>
    {% if isEditor %}
        <span class="data-action">
            <a href="#" data-pk="{% if prototype %}0{% else %}{{ address.getId }}{% endif %}" class="btn btn-danger btn-xs remove-address"><i class="fa fa-remove"></i></a>
        </span>
    {% endif %}
</p>
