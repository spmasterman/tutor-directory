<span class="data-action">
    {% if admin %}
    <a href="#" data-pk="{{ file.getId }}" class="btn btn-danger btn-xs remove-file"><i class="fa fa-remove"></i></a>
    {% endif %}
</span>
<span class="data-link">
    {% if (not file.getFileType.isPrivate) or admin %}
        <a href="" class="btn btn-default btn-xs"><i class="fa fa-cloud-download"></i> Download</a>
    {% endif %}
    {% if ((not file.getFileType.isPrivate) or admin) and file.isImage %}
    <button class="btn btn-default btn-xs" data-toggle="modal" data-target="#modal-compose{{ file.getId }}"><i class="fa fa-eye"></i> Preview</button>
        {% include 'FitchTutorBundle:Profile:preview.html.twig' %}
    {% endif %}
</span>
