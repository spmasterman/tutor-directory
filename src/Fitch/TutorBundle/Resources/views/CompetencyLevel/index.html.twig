{% extends 'FitchFrontEndBundle::frontend.html.twig' %}

{% block main_header -%}
    <h2>{% trans %}competency_level.list.verb{% endtrans %}</h2>
    <em>{% trans %}competency_level.list.tagline{% endtrans %}</em>
{% endblock %}

{% block main_content -%}
    {% import 'FitchFrontEndBundle::helper.html.twig' as helper %}
    <div class="widget widget-table">
        {{ helper.widget_header('competency_level.list.verb', 'fa fa-signal', 'widget-index-competency-level') }}
            <table class="records_list table table-condensed table-striped">
                <thead>
                    <tr>
                        <th>{% trans %}competency_level.column.id{% endtrans %}</th>
                        <th>{% trans %}competency_level.column.name{% endtrans %}</th>
                        <th>{% trans %}competency_level.column.color{% endtrans %}</th>
                        <th>{% trans %}competency_level.column.actions{% endtrans %}</th>
                    </tr>
                </thead>
                <tbody>
                {% for competencyLevel in competencyLevels %}
                    <tr>
                        <td>{{ competencyLevel.id }}</td>
                        <td><a href="{{ path('competency_level_show', { 'id': competencyLevel.id }) }}">{{ competencyLevel.name }}</a></td>
                        <td><span style="background-color: {{ competencyLevel.getColor }}; padding:3px;">{{ competencyLevel.getColor }}</span></td>
                        <td>
                            <a href="{{ path('competency_level_show', { 'id': competencyLevel.id }) }}" class="btn btn-xs btn-default">{% trans %}navigation.show{% endtrans %}</a>
                            <a href="{{ path('competency_level_edit', { 'id': competencyLevel.id }) }}" class="btn btn-xs btn-default">{% trans %}navigation.edit{% endtrans %}</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {{ helper.widget_footer() }}
    </div>
    <div class="record_actions well">
        <a href="{{ path('competency_level_new') }}" class="btn btn-default btn-s">
            <i class="fa fa-plus-circle"></i> {% trans %}navigation.new{% endtrans %}
        </a>
    </div>
{% endblock %}
