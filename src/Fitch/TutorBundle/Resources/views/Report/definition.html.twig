{% if is_granted('ROLE_CAN_CREATE_AD_HOC_REPORTS') %}
    {% import 'FitchFrontEndBundle::helper.html.twig' as helper %}
    <div class="widget widget-table">
        {{ helper.widget_header('Report Settings', 'fa fa-list-alt', 'widget-report_definition') }}

        <div class="alert alert-info alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            <h4><i class="fa fa-info-circle"></i> Information</h4>
            <p>{% trans %}report.header.intro{% endtrans %}</p>
            <p>{% trans %}report.header.note{% endtrans %}</p>
        </div>

        {% form_theme form 'FitchFrontEndBundle:Form:horizontal.html.twig' %}
        {% form_theme form.language.language 'FitchFrontEndBundle:Form:tablerow.html.twig' %}
        {% form_theme form.language.combine 'FitchFrontEndBundle:Form:tablerow.html.twig' %}
        {% form_theme form.rate.rateType 'FitchFrontEndBundle:Form:tablerow.html.twig' %}
        {% form_theme form.rate.operator 'FitchFrontEndBundle:Form:tablerow.html.twig' %}
        {% form_theme form.rate.amount 'FitchFrontEndBundle:Form:tablerow.html.twig' %}
        {% form_theme form.rate.currency 'FitchFrontEndBundle:Form:tablerow.html.twig' %}
        {#{% form_theme form.business_area.business_area 'FitchFrontEndBundle:Form:tablerow.html.twig' %}#}
        {#{% form_theme form.business_area.combine 'FitchFrontEndBundle:Form:tablerow.html.twig' %}#}
        {% form_theme form.category.category 'FitchFrontEndBundle:Form:tablerow.html.twig' %}
        {% form_theme form.category.combine 'FitchFrontEndBundle:Form:tablerow.html.twig' %}
        {% form_theme form.competency.competencyType 'FitchFrontEndBundle:Form:tablerow.html.twig' %}
        {% form_theme form.competency.combine 'FitchFrontEndBundle:Form:tablerow.html.twig' %}
        {% form_theme form.fields 'FitchFrontEndBundle:Form:horizontal.html.twig' %}

        {{ form(form, {'attr': {'class': 'form-horizontal'} }) }}
        {{ helper.widget_footer() }}
    </div>
{% endif %}
