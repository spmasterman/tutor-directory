{% extends 'FitchFrontEndBundle::frontend.html.twig' %}

{% block main_header -%}
    <h2>{% trans %}home.title{% endtrans %}</h2><em>{% trans %}home.tagline{% endtrans %}</em>
{% endblock %}

{% block main_content -%}
    {% import 'FitchFrontEndBundle::helper.html.twig' as helper %}
    <div class="widget widget-table">
    {{ helper.widget_header('Report Settings', 'fa fa-list-alt', 'widget-report_definition') }}
        {% form_theme form 'FitchFrontEndBundle:Form:horizontal.html.twig' %}
        {{ form(form, {'attr': {'class': 'form-horizontal'} }) }}
    {{ helper.widget_footer() }}
    </div>
    <div class="widget widget-table">
    {{ helper.widget_header('Report', 'fa fa-list-alt', 'widget-report_content') }}
        ...REPORT...
    {{ helper.widget_footer() }}
    </div>

{% endblock %}