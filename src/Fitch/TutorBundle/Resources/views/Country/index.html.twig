{% extends 'FitchFrontEndBundle::frontend.html.twig' %}

{% block main_header -%}
    <h2>{% trans %}country.list.verb{% endtrans %}</h2>
    <em>{% trans %}country.list.tagline{% endtrans %}</em>
{% endblock %}

{% block main_content -%}
    {% import 'FitchFrontEndBundle::helper.html.twig' as helper %}
    <div class="widget widget-table">
        {{ helper.widget_header('country.list.verb', 'fa fa-flag-o', 'widget-country-index') }}
            <table class="records_list table table-condensed table-striped">
                <thead>
                <tr>
                    <th>{% trans %}country.column.id{% endtrans %}</th>
                    <th>{% trans %}country.column.name{% endtrans %}</th>
                    <th>{% trans %}country.column.code_2{% endtrans %}</th>
                    <th>{% trans %}country.column.code_3{% endtrans %}</th>
                    <th>{% trans %}country.column.dialing_code{% endtrans %}</th>
                    <th>{% trans %}country.column.default_region{% endtrans %}</th>
                    <th>{% trans %}country.column.preferred{% endtrans %}</th>
                    <th>{% trans %}country.column.active{% endtrans %}</th>
                    <th>{% trans %}country.column.actions{% endtrans %}</th>
                </tr>
                </thead>
                <tbody>
                {% for country in countries %}
                    <tr>
                        <td>{{ country.id }}</td>
                        <td><a href="{{ path('country_show', { 'id': country.id }) }}">{{ country.name }}</a></td>
                        <td>{{ country.twoDigitCode }}</td>
                        <td>{{ country.threeDigitCode }}</td>
                        <td>{{ country.dialingCode }}</td>
                        <td>{% if country.getDefaultRegion %}{{ country.getDefaultRegion }}{% endif %}</td>
                        <td>{% if country.isPreferred %}<span class="badge badge-success">Yes</span>{% endif %}</td>
                        <td>{% if country.isActive %}<span class="badge badge-success">Yes</span>{% endif %}</td>
                        <td>
                            <a href="{{ path('country_show', { 'id': country.id }) }}" class="btn btn-xs btn-default">{% trans %}navigation.show{% endtrans %}</a>
                            <a href="{{ path('country_edit', { 'id': country.id }) }}" class="btn btn-xs btn-default">{% trans %}navigation.edit{% endtrans %}</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {{ helper.widget_footer() }}
    </div>
    <div class="record_actions well">
        <a href="{{ path('country_new') }}" class="btn btn-default btn-s">
            <i class="fa fa-plus-circle"></i> {% trans %}navigation.new{% endtrans %}
        </a>
    </div>
{% endblock %}
