{% extends 'FitchFrontEndBundle::frontend.html.twig' %}

{% block main_header -%}
    <h2>{% trans %}country.new.verb{% endtrans %}</h2>
    <em>{% trans %}country.new.tagline{% endtrans %}</em>
{% endblock %}

{% block main_content -%}
    {% form_theme form 'FitchFrontEndBundle:Form:horizontal.html.twig' %}
    {{ form(form, {'attr': {'class': 'form-horizontal'} }) }}

    <div class="record_actions well">
        <a class="btn btn-default btn-s" href="{{ path('country') }}">
                <i class="fa fa-arrow-circle-left"></i> {% trans %}navigation.list{% endtrans %}
        </a>
    </div>
{% endblock %}
