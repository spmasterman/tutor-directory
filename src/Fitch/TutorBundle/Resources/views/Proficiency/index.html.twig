{% extends 'FitchFrontEndBundle::frontend.html.twig' %}

{% block main_header -%}
    <h2>{% trans %}proficiency.list.verb{% endtrans %}</h2>
    <em>{% trans %}proficiency.list.tagline{% endtrans %}</em>
{% endblock %}

{% block main_content -%}
    {% import 'FitchFrontEndBundle::helper.html.twig' as helper %}
    <div class="widget widget-table">
        {{ helper.widget_header('proficiency.list.verb', 'fa fa-star', 'widget-filetype-index') }}
            <table class="records_list table table-condensed table-striped">
                <thead>
                <tr>
                    <th>{% trans %}proficiency.column.id{% endtrans %}</th>
                    <th>{% trans %}proficiency.column.name{% endtrans %}</th>
                    <th>{% trans %}proficiency.column.actions{% endtrans %}</th>
                </tr>
                </thead>
                <tbody>
                {% for proficiency in proficiencies %}
                    <tr>
                        <td>{{ proficiency.id }}{% if proficiency.isDefault %}<i class="fa fa-asterisk yellow-font"></i>{% endif %}</td>
                        <td><a href="{{ path('proficiency_show', { 'id': proficiency.id }) }}">{{ proficiency.name }}</a></td>
                        <td>
                            <a href="{{ path('proficiency_show', { 'id': proficiency.id }) }}" class="btn btn-xs btn-default">{% trans %}navigation.show{% endtrans %}</a>
                            <a href="{{ path('proficiency_edit', { 'id': proficiency.id }) }}" class="btn btn-xs btn-default">{% trans %}navigation.edit{% endtrans %}</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <small><i class="fa fa-asterisk yellow-font"></i> {% trans %}proficiency.default_message{% endtrans %}</small>
        {{ helper.widget_footer() }}
    </div>

    <div class="record_actions well">
        <a href="{{ path('proficiency_new') }}" class="btn btn-default btn-s">
            <i class="fa fa-plus-circle"></i> {% trans %}navigation.new{% endtrans %}
        </a>
    </div>
{% endblock %}
