{% extends 'FitchFrontEndBundle::frontend.html.twig' %}

{% block main_header -%}
    <h2>{% trans %}operating_region.list.verb{% endtrans %}</h2>
    <em>{% trans %}operating_region.list.tagline{% endtrans %}</em>
{% endblock %}

{% block main_content -%}
    <div class="widget widget-table">
        <div class="widget-header">
            <h3><i class="fa fa-globe"></i> {% trans %}operating_region.list.verb{% endtrans %}</h3>
            <div class="btn-group widget-header-toolbar">
                <a href="#" title="Focus" class="btn-borderless btn-focus"><i class="fa fa-eye"></i></a>
                <a href="#" title="Expand/Collapse" class="btn-borderless btn-toggle-expand"><i class="fa fa-chevron-up"></i></a>
                <a href="#" title="Remove" class="btn-borderless btn-remove"><i class="fa fa-times"></i></a>
            </div>
        </div>
        <div class="widget-content">
            <table class="records_list table table-condensed table-striped">
                <thead>
                    <tr>
                    <tr>
                        <th>{% trans %}operating_region.column.id{% endtrans %}</th>
                        <th>{% trans %}operating_region.column.name{% endtrans %}</th>
                        <th>{% trans %}operating_region.column.actions{% endtrans %}</th>
                    </tr>
                </thead>
                <tbody>
                {% for region in regions %}
                    <tr>
                        <td>{{ region.id }}{% if region.isDefault %}<i class="fa fa-asterisk yellow-font"></i>{% endif %}</td>
                        <td><a href="{{ path('region_show', { 'id': region.id }) }}">{{ region.name }}</a></td>
                        <td>
                            <a href="{{ path('region_show', { 'id': region.id }) }}" class="btn btn-xs btn-default">{% trans %}navigation.show{% endtrans %}</a>
                            <a href="{{ path('region_edit', { 'id': region.id }) }}" class="btn btn-xs btn-default">{% trans %}navigation.edit{% endtrans %}</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <small><i class="fa fa-asterisk yellow-font"></i> {% trans %}operating_region.default_message{% endtrans %}</small>
        </div>
    </div>

    <div class="record_actions well">
        <a href="{{ path('region_new') }}" class="btn btn-default btn-s">
            <i class="fa fa-plus-circle"></i> {% trans %}navigation.new{% endtrans %}
        </a>
    </div>
{% endblock %}
